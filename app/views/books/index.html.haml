%legend All available books

.table-responsive
  %table.table.table-hover.table-stripped
    %thead
      %tr
        %th Title
        %th
        %th
        %th
    %tbody
      - @books.each do |book|
        %tr
          %td= book.title
          %td= link_to 'Show', book, class: 'btn btn-success btn-sm'
          %td= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm'
          %td= link_to 'Destroy', book, class: 'btn btn-danger btn-sm', :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Book', new_book_path, class: 'btn btn-primary'
